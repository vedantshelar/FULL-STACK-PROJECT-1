<%- layout('./layout/boilureplate') %>

<div class="container-fluid mt-3 mb-3">

    <form method="post" action="/list/<%=listing._id%>/edit" enctype="multipart/form-data" class="editForm">
        <h1 style="color: rgb(80, 80, 80);">Edit Your Place</h1>
        <div class="mb-3">
            <label for="propertyArea" class="form-label">Property Area</label>
            <input type="text" class="form-control" id="propertyArea" name="propertyArea" value="<%= listing.propertyArea %>">
        </div> 
        <div class="mb-3">
            <label for="description" class="form-label">Description</label>
            <textarea class="form-control" id="description" rows="3" name="description"><%=listing.description%></textarea>
        </div>
        <div class="mb-3">
            <label for="listingImage1" class="form-label">Upload Image-1</label> 
            <input class="form-control" type="file" name="listingImage1" id="listingImage1">
        </div>
        <div class="mb-3">
            <label for="listingImage2" class="form-label">Upload Image-2</label> 
            <input class="form-control" type="file" name="listingImage2" id="listingImage2">
        </div>
        <div class="mb-3">
            <label for="listingImage3" class="form-label">Upload Image-3</label> 
            <input class="form-control" type="file" name="listingImage3" id="listingImage3">
        </div>  
        <div class="mb-3">
            <label for="listingImage4" class="form-label">Upload Image-4</label> 
            <input class="form-control" type="file" name="listingImage4" id="listingImage4">
        </div>
        <div class="row">
            <div class="col-sm-5">
                <div class="mb-3">
                    <label for="price" class="form-label">Price</label>
                    <input type="number" class="form-control" id="price" name="price" value="<%= listing.price %>">
                </div>
            </div> 
            <div class="col-sm-7">
                <div class="mb-3">
                    <label for="country" class="form-label">Country</label>
                    <input type="text" class="form-control" id="country" name="country" value="<%= listing.country %>">
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-sm-5">
                <div class="mb-3">
                    <label for="city" class="form-label">City</label>
                    <input type="text" class="form-control" id="city" name="city" value="<%= listing.city %>">
                </div>
            </div>
            <div class="col-sm-7">
                <label for="category" class="form-label">Category</label>
                <input type="text" class="form-control" id="category" name="category" value="<%= listing.category %>">
            </div>
        </div>
        <div class="mb-3">
            <label for="location" class="form-label">Property Address</label>
            <textarea class="form-control" id="location1" name="location" rows="3" ><%= listing.location %></textarea>   
        </div> 
        <button type="submit" class="btn editBtn2" style="color: white; background-color: rgb(231, 83, 83);">Edit Listing</button>
    </form>

</div>