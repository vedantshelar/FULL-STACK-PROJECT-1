<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
    <link rel="stylesheet" href="/css/filterForm.css">
</head>

<body> 
    <form action="/list/filter/data" method="get" name="filterForm" id="filterForm">
        <div class="mb-3">
            <h4>Apply Filter</h4>
        </div>
        <div class="mb-3">
            <label for="country" class="form-label">Select Country</label>
            <select class="form-select" aria-label="Default select example" name="country" id="country">
                <% for(country of countries) {%>
                    <option value="<%=country%>">
                        <%=country%>
                    </option>
                    <%}%>
            </select>
        </div>
        <hr>
        <div class="mb-3">
            <label for="city" class="form-label">Select City</label>
            <select class="form-select" aria-label="Default select example" name="city" id="city">
                <% for(city of cities) {%>
                    <option value="<%=city%>">
                        <%=city%>
                    </option>
                    <%}%>
            </select>
        </div>
        <hr>
        <div class="mb-3">
            <label for="rentPrice" class="form-label" id="rentPriceLabel">Property Rent up to :<b> 0 RS
                    /month</b></label>
            <input type="range" class="form-range" name="rentPrice" id="rentPrice" value="0" min="0" max="500000"
                step="5000">
        </div>
        <hr>
        <div class="mb-3">
            <button type="submit" class="btn btn-outline-secondary" style="width: 100%;">Find</button>
        </div>
    </form> 

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"
        integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz"
        crossorigin="anonymous"></script>
</body>

<script>
    let rentPrice = document.getElementById('rentPrice');
    let rentPriceLabel = document.getElementById('rentPriceLabel');
    rentPrice.addEventListener('change', () => {
        rentPriceLabel.innerHTML = "Property Rent up to : <b>" + rentPrice.value + " RS /month </b>";
    })
</script>

</html>